# Global
TZ=Europe/Budapest
STACK_NETWORK=stack_net

# Domains
DOMAIN_PROD=app.example.com
DOMAIN_DEV=dev.app.example.com
DOMAIN_N8N=n8n.example.com

# Certbot
CERTBOT_EMAIL=admin@example.com

# App identity (used for container naming)
APP_NAME=app

# Host paths (apps live on host; this repo mounts them)
APP_PATH_PROD=/srv/apps/app/prod/current
APP_PATH_DEV=/srv/apps/app/dev/current

# App repo cloning (public repos recommended for v1.2)
# Use HTTPS to avoid SSH keys entirely:
APP_REPO_URL=https://github.com/your-org/your-app.git
APP_BRANCH_PROD=main
APP_BRANCH_DEV=dev

# Images (pin versions; avoid 'latest')
NGINX_IMAGE=nginx:1.29.4-alpine
CERTBOT_IMAGE=certbot/certbot:v5.2.2
N8N_IMAGE=n8nio/n8n:2.1.5
MYSQL_IMAGE=mysql:8.4.7
POSTGRES_IMAGE=postgres:18.1-alpine3.23

# Node builder (LTS recommended)
NODE_IMAGE=node:24.12-alpine3.23

# PHP runtime image (built from docker/php-fpm/Dockerfile)
PHP_IMAGE=stack-php-fpm:8.5.1

# Composer image (built from docker/composer/Dockerfile)
COMPOSER_IMAGE=stack-composer:2.8.7-php8.5.1

# Claude CLI image (built from docker/claude-cli/Dockerfile)
CLAUDE_CLI_IMAGE=stack-claude-cli:1.0.0

# MySQL
MYSQL_ROOT_PASSWORD=change-me
MYSQL_DATABASE_PROD=app_prod
MYSQL_USER_PROD=app_prod
MYSQL_PASSWORD_PROD=change-me
MYSQL_DATABASE_DEV=app_dev
MYSQL_USER_DEV=app_dev
MYSQL_PASSWORD_DEV=change-me

# Postgres
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=change-me

# n8n
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-me
N8N_ENCRYPTION_KEY=change-me-32chars-min
N8N_HOST=n8n.example.com
N8N_PROTOCOL=https
N8N_PORT=5678
N8N_EDITOR_BASE_URL=https://n8n.example.com
