# Global
TZ=Europe/Budapest
STACK_NETWORK=stack_net

# Nginx / domains
DOMAIN_PROD=app.example.com
DOMAIN_DEV=dev.app.example.com

# Host paths (apps live on the host; this repo mounts them)
APP_NAME=exampleapp
APP_PATH_PROD=/srv/apps/exampleapp/prod/current
APP_PATH_DEV=/srv/apps/exampleapp/dev/current

# Images (pin versions; avoid 'latest')
NGINX_IMAGE=nginx:1.29.4-alpine
CERTBOT_IMAGE=certbot/certbot:v2.11.0
N8N_IMAGE=n8nio/n8n:1.83.0
MYSQL_IMAGE=mysql:8.0.40
POSTGRES_IMAGE=postgres:16.10-alpine
# Node builder (prefer LTS)
NODE_IMAGE=node:22.20.0-alpine

# PHP runtime image (build/push from your own GHCR)
PHP_IMAGE=ghcr.io/your-org/php-runtime:8.3.2-2026-01-03

# MySQL
MYSQL_ROOT_PASSWORD=change-me
MYSQL_DATABASE=app
MYSQL_USER=app
MYSQL_PASSWORD=change-me

# Postgres
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=change-me

# n8n
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-me
N8N_ENCRYPTION_KEY=change-me-32chars-min
N8N_HOST=n8n.example.com
N8N_PROTOCOL=https
N8N_PORT=5678
